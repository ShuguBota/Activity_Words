<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<VBox maxHeight="Infinity" maxWidth="Infinity" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ro.cristian.activityrandomiser.controller.AppController">
    <Label fx:id="labelCuvantGenerat" alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity" text="Hello" textAlignment="CENTER" wrapText="true" VBox.vgrow="ALWAYS" />
