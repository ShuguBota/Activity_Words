        <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
            <Button text="Desenat" onMouseClicked="#buttonDesenatPressed"/>
            <Label fx:id="labelDesenat"/>
        </VBox>
        <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
            <Button text="Vorbit" onMouseClicked="#buttonVorbitPressed"/>
            <Label fx:id="labelVorbit" text="Label" />
        </VBox>
        <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
            <Button text="Mimat" onMouseClicked="#buttonMimatPressed"/>
            <Label fx:id="labelMimat" text="Label" />
        </VBox>
    </HBox>
